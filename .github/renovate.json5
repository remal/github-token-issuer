{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>remal/renovate-config:global"
  ],

  "git-submodules": {
    // This is in beta for now, so let's use Dependabot to update Git submodules
    enabled: false
  },

  // $$$sync-with-template-modifiable: local $$$
  packageRules: [
    {
      matchManagers: [
        "gomod"
      ],
      matchDepTypes: [
        "indirect"
      ],
      enabled: true,
      major: {
        enabled: false,
      },
    },
    {
      matchManagers: [
        "terraform"
      ],
      matchDepTypes: [
        'required_version'
      ],
      rangeStrategy: "bump"
    },
    {
      matchManagers: [
        "terraform"
      ],
      matchDepTypes: [
        '!/^required_version$/'
      ],
      rangeStrategy: "pin"
    },
  ],

  postUpdateOptions: [
    "gomodTidy",
    "gomodUpdateImportPaths",
  ],
  // $$$sync-with-template-modifiable-end$$$
}
